<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title><%= title || 'TukiPlan ¬∑ sign up & start tuki-ing' %></title>
  
  <!-- Tailwind + Inter font style -->
  <script src="https://cdn.tailwindcss.com"></script>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
  <style>
    /* consistent TukiPlan identity ‚Äì calm, friendly, modest */
    body {
      font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Helvetica, Arial, sans-serif;
    }
    .soft-shadow {
      box-shadow: 0 8px 30px rgba(0,0,0,0.02), 0 2px 6px rgba(0,20,30,0.02);
    }
    .input-ring {
      transition: all 0.15s ease;
    }
    .input-ring:focus {
      box-shadow: 0 0 0 3px rgba(30, 64, 175, 0.06);
      border-color: #a5b4fc;
      background-color: white;
    }
    .hover-lift:hover {
      transform: translateY(-2px);
      box-shadow: 0 20px 28px -10px rgba(0,45,60,0.06);
    }
  </style>
</head>
<body class="bg-stone-50 text-stone-800 antialiased flex flex-col min-h-screen">

  <!-- NAVBAR ‚Äì same as homepage/login, quiet & consistent -->
  <nav class="bg-white/90 backdrop-blur-sm border-b border-stone-200/60 text-stone-700 sticky top-0 z-20">
    <div class="container mx-auto px-5 md:px-6 py-4 flex justify-between items-center">
      <a href="/" class="text-2xl md:text-3xl font-light tracking-tight text-stone-800 flex items-end gap-1">
        <span class="font-semibold text-blue-900">TukiPlan</span>
        <span class="text-xs uppercase bg-stone-100 text-stone-600 px-2 py-1 rounded-full font-medium border border-stone-200/50">weekend</span>
      </a>
      
      <div class="hidden md:flex items-center space-x-8 text-sm font-medium">
        <a href="/events" class="text-stone-600 hover:text-blue-900 transition-colors flex items-center gap-1.5">
          <i class="far fa-compass text-xs"></i> Discover
        </a>
        <a href="/meetups" class="text-stone-600 hover:text-blue-900 transition-colors flex items-center gap-1.5">
          <i class="fas fa-user-group text-xs"></i> Plan together
        </a>
        <a href="/login" class="text-stone-600 hover:text-blue-900 transition">Login</a>
        <a href="/register" class="bg-blue-900 text-white px-5 py-2 rounded-full hover:bg-blue-800 transition shadow-sm text-sm font-medium border border-blue-900/20">Sign up</a>
      </div>

      <button class="md:hidden text-stone-600 p-2 rounded-full hover:bg-stone-100" id="mobile-menu-btn">
        <i class="fas fa-bars text-xl"></i>
      </button>
    </div>
  </nav>

  <!-- SIGNUP SECTION ‚Äì warm, open, generous spacing -->
  <main class="flex-grow flex items-center justify-center py-16 px-5">
    <div class="w-full max-w-md">
      
      <!-- subtle back to home -->
      <a href="/" class="inline-flex items-center gap-1 text-sm text-stone-500 hover:text-stone-700 mb-8 transition group">
        <i class="fas fa-arrow-left text-xs group-hover:-translate-x-1 transition-transform"></i> back to home
      </a>

      <!-- signup card ‚Äì soft, airy, inviting -->
      <div class="bg-white/90 backdrop-blur-sm rounded-3xl soft-shadow border border-stone-100/80 p-8 md:p-10">
        
        <!-- brand micro-message: warm welcome -->
        <div class="flex justify-center mb-6">
          <span class="inline-flex items-center gap-2 bg-stone-100 text-stone-700 px-4 py-2 rounded-full text-xs uppercase tracking-wider border border-stone-200/60">
            <i class="fas fa-hand-wave text-stone-500"></i> join the tuki family
          </span>
        </div>
        
        <h1 class="text-3xl md:text-4xl font-light text-stone-800 mb-2 text-center tracking-tight">
          Create your <span class="font-semibold text-blue-900">TukiPlan</span>
        </h1>
        <p class="text-stone-500 text-sm text-center mb-8 max-w-xs mx-auto">
          Free account. No spam. Just easier weekends with your crew.
        </p>
        
        <!-- signup form ‚Äì clean, no clutter, friendly fields -->
        <form action="/register" method="POST" class="space-y-5">
          
          <!-- full name field -->
          <div class="space-y-1.5">
            <label for="fullname" class="block text-sm font-medium text-stone-700 pl-1">
              Full name <span class="text-stone-400 text-xs">(or nickname)</span>
            </label>
            <div class="relative">
              <div class="absolute inset-y-0 left-0 pl-4 flex items-center pointer-events-none">
                <i class="fas fa-user text-stone-400 text-sm"></i>
              </div>
              <input 
                type="text" 
                id="fullname" 
                name="fullname" 
                placeholder="e.g., Wanjiku or your crew name" 
                class="w-full pl-11 pr-4 py-4 bg-stone-50/80 border border-stone-200 rounded-2xl text-stone-700 placeholder:text-stone-400 text-base focus:outline-none input-ring transition"
                required
              />
            </div>
          </div>

          <!-- email field -->
          <div class="space-y-1.5">
            <label for="email" class="block text-sm font-medium text-stone-700 pl-1">
              Email address
            </label>
            <div class="relative">
              <div class="absolute inset-y-0 left-0 pl-4 flex items-center pointer-events-none">
                <i class="fas fa-envelope text-stone-400 text-sm"></i>
              </div>
              <input 
                type="email" 
                id="email" 
                name="email" 
                placeholder="you@example.com" 
                class="w-full pl-11 pr-4 py-4 bg-stone-50/80 border border-stone-200 rounded-2xl text-stone-700 placeholder:text-stone-400 text-base focus:outline-none input-ring transition"
                required
              />
            </div>
          </div>

          <!-- password field -->
          <div class="space-y-1.5">
            <label for="password" class="block text-sm font-medium text-stone-700 pl-1">
              Password
            </label>
            <div class="relative">
              <div class="absolute inset-y-0 left-0 pl-4 flex items-center pointer-events-none">
                <i class="fas fa-lock text-stone-400 text-sm"></i>
              </div>
              <input 
                type="password" 
                id="password" 
                name="password" 
                placeholder="at least 8 characters" 
                class="w-full pl-11 pr-12 py-4 bg-stone-50/80 border border-stone-200 rounded-2xl text-stone-700 placeholder:text-stone-400 text-base focus:outline-none input-ring transition"
                required
              />
              <button type="button" class="absolute inset-y-0 right-0 pr-4 flex items-center text-stone-400 hover:text-stone-600" onclick="togglePasswordVisibility('password', this)">
                <i class="fas fa-eye text-sm toggle-password-icon"></i>
              </button>
            </div>
            <p class="text-xs text-stone-500 pl-1 mt-1">min. 8 characters, at least one letter</p>
          </div>

          <!-- confirm password -->
          <div class="space-y-1.5">
            <label for="confirmPassword" class="block text-sm font-medium text-stone-700 pl-1">
              Confirm password
            </label>
            <div class="relative">
              <div class="absolute inset-y-0 left-0 pl-4 flex items-center pointer-events-none">
                <i class="fas fa-lock text-stone-400 text-sm"></i>
              </div>
              <input 
                type="password" 
                id="confirmPassword" 
                name="confirmPassword" 
                placeholder="same password again" 
                class="w-full pl-11 pr-12 py-4 bg-stone-50/80 border border-stone-200 rounded-2xl text-stone-700 placeholder:text-stone-400 text-base focus:outline-none input-ring transition"
                required
              />
              <button type="button" class="absolute inset-y-0 right-0 pr-4 flex items-center text-stone-400 hover:text-stone-600" onclick="togglePasswordVisibility('confirmPassword', this)">
                <i class="fas fa-eye text-sm toggle-password-icon"></i>
              </button>
            </div>
          </div>

          <!-- terms & conditions ‚Äì subtle checkbox, warm language -->
          <div class="flex items-start gap-3 pt-4">
            <input 
              type="checkbox" 
              id="terms" 
              name="terms" 
              class="mt-1 w-4 h-4 rounded border-stone-300 text-blue-900 focus:ring-blue-200 focus:ring-offset-0 bg-stone-50"
              required
            />
            <label for="terms" class="text-sm text-stone-600 leading-relaxed">
              I agree to the 
              <a href="/terms" class="text-blue-900 hover:text-blue-800 border-b border-blue-200 hover:border-blue-400 transition pb-0.5">TukiPlan terms</a> 
              and 
              <a href="/privacy" class="text-blue-900 hover:text-blue-800 border-b border-blue-200 hover:border-blue-400 transition pb-0.5">privacy promise</a>. 
              No spam, no sharing ‚Äì just weekend vibes.
            </label>
          </div>

          <!-- submit button ‚Äì confident, warm, modest -->
          <button 
            type="submit" 
            class="w-full bg-blue-900 hover:bg-blue-800 text-white font-medium px-6 py-4 rounded-full transition text-base shadow-sm flex items-center justify-center gap-3 group mt-8"
          >
            <span>Create my account</span>
            <i class="fas fa-arrow-right text-xs group-hover:translate-x-1 transition-transform"></i>
          </button>
        </form>

        <!-- divider ‚Äì clean, minimal -->
        <div class="relative my-8">
          <div class="absolute inset-0 flex items-center">
            <div class="w-full border-t border-stone-200"></div>
          </div>
          <div class="relative flex justify-center text-xs uppercase">
            <span class="bg-white px-6 text-stone-500">already tuki-ing?</span>
          </div>
        </div>

        <!-- login link ‚Äì quiet invitation -->
        <p class="text-center text-sm text-stone-600">
          Have an account? 
          <a href="/login" class="font-medium text-blue-900 hover:text-blue-800 transition border-b border-blue-200 hover:border-blue-400 pb-0.5">
            Log in here
          </a>
        </p>

        <!-- demo / friendly note (optional) -->
        <p class="text-center text-xs text-stone-400 mt-8 pt-4 border-t border-stone-100">
          <i class="fas fa-heart mr-1 text-stone-300"></i> free forever ‚Äì just tuki, then relax.
        </p>
      </div>
      
      <!-- quiet reassurance -->
      <p class="text-center text-xs text-stone-400 mt-10 max-w-xs mx-auto">
        By joining, you become part of a gentle community that believes in simpler, together weekends.
      </p>
    </div>
  </main>

  <!-- FOOTER ‚Äì minimal, consistent with TukiPlan identity -->
  <footer class="bg-white border-t border-stone-200/50 mt-8 py-10 text-stone-500 text-sm">
    <div class="container mx-auto px-5 max-w-6xl">
      <div class="flex flex-col md:flex-row justify-between items-center gap-6">
        <div class="flex items-center gap-3 text-base">
          <span class="font-medium text-stone-800">TukiPlan</span>
          <span class="text-stone-300">|</span>
          <span class="text-stone-500 text-sm">plan weekends, together</span>
        </div>
        <div class="flex space-x-8 text-sm">
          <a href="#" class="text-stone-500 hover:text-blue-800 transition">Events</a>
          <a href="#" class="text-stone-500 hover:text-blue-800 transition">Meetups</a>
          <a href="#" class="text-stone-500 hover:text-blue-800 transition">About</a>
          <a href="#" class="text-stone-500 hover:text-blue-800 transition">Contact</a>
        </div>
        <div class="flex items-center space-x-5 text-stone-400">
          <a href="#" class="hover:text-stone-700 transition text-lg"><i class="fab fa-twitter"></i></a>
          <a href="#" class="hover:text-stone-700 transition text-lg"><i class="fab fa-instagram"></i></a>
          <a href="#" class="hover:text-stone-700 transition text-lg"><i class="fab fa-whatsapp"></i></a>
        </div>
      </div>
      <div class="text-center md:text-left text-xs text-stone-400 mt-8 border-t border-stone-100 pt-8">
        <p>&copy; <%= new Date().getFullYear() %> TukiPlan. Just tuki ‚Äî then relax.</p>
      </div>
    </div>
  </footer>

  <!-- tiny script for password toggles (elegant, modest) -->
  <script>
    function togglePasswordVisibility(inputId, btn) {
      const passwordInput = document.getElementById(inputId);
      const icon = btn.querySelector('.toggle-password-icon');
      if (passwordInput.type === 'password') {
        passwordInput.type = 'text';
        icon.classList.remove('fa-eye');
        icon.classList.add('fa-eye-slash');
      } else {
        passwordInput.type = 'password';
        icon.classList.remove('fa-eye-slash');
        icon.classList.add('fa-eye');
      }
    }

    // mobile menu placeholder (consistent with homepage)
    document.getElementById('mobile-menu-btn')?.addEventListener('click', function() {
      alert('Menu ‚Äî ready for your mobile implementation üèïÔ∏è');
    });

    // simple password match check (optional front-end helper, not intrusive)
    document.querySelector('form')?.addEventListener('submit', function(e) {
      const password = document.getElementById('password')?.value;
      const confirm = document.getElementById('confirmPassword')?.value;
      if (password !== confirm) {
        e.preventDefault();
        alert('Passwords don‚Äôt match ‚Äî let‚Äôs try again ‚ú®');
      }
    });
  </script>
</body>
</html>